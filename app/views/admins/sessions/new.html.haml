.row
  .col-sm-4.col-sm-offset-4.form-section
    %h2.main-title.center Iniciar Sesión
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-group
        = f.email_field :email, placeholder: 'Email', class: 'form-control', autofocus: true
      .form-group
        = f.password_field :password, placeholder: 'Contaseña', class: 'form-control', autocomplete: "off"
      .form-group
        = f.submit "Ingresar", class: 'btn btn-custom'
      - if devise_mapping.rememberable?
        .form-group
          = f.check_box :remember_me
          = f.label "Recuerdame"
    = render "admins/shared/links"
